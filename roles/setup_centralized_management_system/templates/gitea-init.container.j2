[Unit]
Description=Initializes Gitea
After=network-online.target

[Container]
Image=registry.access.redhat.com/ubi9/ubi-minimal:9.7-1763362218
ContainerName=gitea-init
Pull=missing
Volume=gitea-data:/data:Z
Volume=/usr/share/gitea/config:/config-source:ro
Exec=/bin/sh /config-source/10-init-dirs.sh && /config-source/20-generate-appini.sh && /config-source/30-fixperms.sh

[Service]
Type=oneshot
RemainAfterExit=true
Restart=on-failure
RestartSec=5s


[Install]
WantedBy=multi-user.target