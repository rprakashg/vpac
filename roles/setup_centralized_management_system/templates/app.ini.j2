[server]
DOMAIN              = {{ ansible_host }}
ROOT_URL            = http://{{ ansible_host }}
HTTP_PORT           = {{ gitea_port }}
SSH_PORT            = 2222
START_SSH_SERVER    = true

[database]
DB_TYPE             = sqlite3
PATH                = /data/gitea/gitea.db

[repository]
ROOT                = /data/git/repositories

[service]
DISABLE_REGISTRATION    = true

[security]
INSTALL_LOCK            = true
